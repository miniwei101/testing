@using testing.Models
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
@using (Html.BeginForm())
{ 

}

<p>
    <a href="~/first/Create">+新增客戶</a>
</p>
<table border="1">
    <tr>
        <td>序號</td>
        <td>姓名</td>
        <td>地址</td>
        <td>帳戶</td>
        <td>密碼</td>
        <td>電話</td>
        <td>電子郵件</td>
        <td>聯絡人</td>
        <td>修改</td>
        <td>刪除</td>
    </tr>
    @{
        int count = 0;
        foreach (Class1 c in Model)
        {
            count++;
        <tr>
            <td>@count</td>
            <td>@c.c_name</td>
            <td>@c.c_address</td>
            <td>@c.c_account</td>
            <td>@c.c_password</td>
            <td>@c.c_phone</td>
            <td>@c.c_email</td>
            <td>@c.c_pname</td>
            @*<td><a href="~/Customer/Delete">刪除客戶</a></td>*@
            <td>@Html.ActionLink("修改", "Edit", "first", new { id = c.cId }, null)</td>
            <td>@Html.ActionLink("刪除", "Delete", "first", new { id = c.cId }, new { onclick = "return confirm('確定要刪除嗎？')" })</td>
        </tr>
        }
    }
</table>

